generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum TipoAeronave {
  COMERCIAL
  MILITAR
}

enum TipoPeca {
  NACIONAL
  IMPORTADA
}

enum StatusPeca {
  PRODUCAO
  TRANSPORTE
  PRONTA
}

enum StatusEtapa {
  PENDENTE
  ANDAMENTO
  CONCLUIDA
}

enum NivelPermissao {
  ADMINISTRADOR
  ENGENHEIRO
  OPERADOR
}

enum TipoTeste {
  ELETRICO
  HIDRAULICO
  AERODINAMICO
}

enum ResultadoTeste {
  APROVADO
  REPROVADO
}

model Funcionario {
  id              Int             @id @default(autoincrement())
  nome            String
  telefone        String
  endereco        String
  usuario         String          @unique
  senha           String
  nivelPermissao  NivelPermissao
  etapas          Etapa[]
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  @@map("funcionarios")
}

model Aeronave {
  id          Int             @id @default(autoincrement())
  codigo      String          @unique
  modelo      String
  tipo        TipoAeronave
  capacidade  Int
  alcance     Float
  pecas       Peca[]
  etapas      Etapa[]
  testes      Teste[]
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  @@map("aeronaves")
}

model Peca {
  id          Int          @id @default(autoincrement())
  nome        String
  tipo        TipoPeca
  fornecedor  String
  status      StatusPeca   @default(PRODUCAO)
  aeronaveId  Int
  aeronave    Aeronave     @relation(fields: [aeronaveId], references: [id], onDelete: Cascade)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@map("pecas")
}

model Etapa {
  id             Int               @id @default(autoincrement())
  nome           String
  prazo          DateTime
  status         StatusEtapa       @default(PENDENTE)
  aeronaveId     Int
  aeronave       Aeronave          @relation(fields: [aeronaveId], references: [id], onDelete: Cascade)
  funcionarios   Funcionario[]
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt

  @@map("etapas")
}

model Teste {
  id          Int             @id @default(autoincrement())
  tipo        TipoTeste
  resultado   ResultadoTeste
  aeronaveId  Int
  aeronave    Aeronave        @relation(fields: [aeronaveId], references: [id], onDelete: Cascade)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  @@map("testes")
}

model MetricaRequisicao {
  id                    Int       @id @default(autoincrement())
  metodo                String
  rota                  String
  latenciaMs            Float
  tempoProcessamentoMs  Float
  tempoRespostaMs       Float
  timestamp             DateTime  @default(now())
  statusCode            Int

  @@map("metricas_requisicao")
}
